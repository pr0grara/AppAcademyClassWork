<form action="<%= new_cat_url %>" method="get">

<label> Cat Name
  <input type="text" name="cat[name]"> 
</label>
<br><br>

<label> Sex
  <input type="radio" name="cat[sex]" value="M">  
  <label>Male</label>
  <input type="radio" name="cat[sex]" value="F">
  <label>Female</label>
  <input type="radio" name="cat[sex]" value="M">  
  <label>Lots</label>
</label>

<br><br>

<label> Color
  <select name="cat[color]" id="color">
    <option selected>--Select a Color--</option>
    <% Cat::CAT_COLORS.each do |color| %>
      <option value="<%= color %>"><%= color.capitalize %></option>
    <% end %>
  </select>
</label> 

<br><br>

<label> Date
    <input type="date" name="cat[birth_date]" id="birth date">
</label>
<br><br>

<label> Description
    <textarea name="cat[description]" id="description">
    
    </textarea>
</label>

</form>